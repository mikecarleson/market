<section id="newAdd" class="container">
        <div class="form-wrap">
            <h1>Sign Up or Login</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
          
            <div class="input-group">
                    <label for="title">Email</label>
                    <input type="text" name="title" id="title" class="input-box" placeholder="example@gmail.com"
                      maxlength="100" required>
                  </div>
                  <div class="input-group">
                    <label for="password">Password</label>
                    <input type="text" name="password" id="password" class="input-box" placeholder="Enter Password"
                    maxlength="100">
                  </div>
                  <input type="submit" value="Welcome!" class="add-btn" id="signUp">
                  <input type="submit" value="Log in" class="add-btn" id="logIn">

            </div>
      </div>
      </section>
      <script src="https://www.gstatic.com/firebasejs/5.9.4/firebase.js"></script>
      <script src="/firebase.js"></script>    
